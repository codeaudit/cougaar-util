<?xml version="1.0"  encoding="US-ASCII"?>

<!DOCTYPE Policy SYSTEM "Policy.ldm.dtd" []>

<!-- Inventory Policy for SUPPLY-ROOT, et al: Supply Root units -->

<Policies>

 <Policy name="BulkPOLInventoryPolicy" type="org.cougaar.domain.glm.plugins.inventory.InventoryPolicy">
    <RuleParam name="ResourceType">
      	<String value ="BulkPOL">
	</String>
    </RuleParam>
    <RuleParam name="DaysOnHand">
	<Integer value="0" min="-1" max="90"> 
	</Integer>
    </RuleParam>
    <RuleParam name="DaysForward">
        <Integer value="1" min="0" max="30">
	</Integer>
    </RuleParam>
    <RuleParam name="DaysBackward">
        <Integer value="0" min="0" max="30">
	</Integer>
    </RuleParam>
    <RuleParam name="GoalLevelMultiplier">
        <Double value="1.1" min="1.0" max="30">
	</Double>
    </RuleParam>
    <RuleParam name="WithdrawSwitchoverDay">
        <Integer value="100" min="0" max="300">
        </Integer>
    </RuleParam>
    <RuleParam name="RefillSwitchoverDay">
        <Integer value="100" min="0" max="300">
        </Integer>
    </RuleParam>
    <RuleParam name="TurnOffProjections">
        <Boolean value="false">
        </Boolean>
    </RuleParam>
  </Policy>

 <Policy name="PackagedPOLInventoryPolicy" type="org.cougaar.domain.glm.plugins.inventory.InventoryPolicy">
    <RuleParam name="ResourceType">
      	<String value ="PackagedPOL">
	</String>
    </RuleParam>
    <RuleParam name="DaysOnHand">
	<Integer value="0" min="-1" max="90"> 
	</Integer>
    </RuleParam>
    <RuleParam name="DaysForward">
        <Integer value="1" min="0" max="30">
	</Integer>
    </RuleParam>
    <RuleParam name="DaysBackward">
        <Integer value="0" min="0" max="30">
	</Integer>
    </RuleParam>
    <RuleParam name="GoalLevelMultiplier">
        <Double value="1.1" min="1.0" max="30">
	</Double>
    </RuleParam>
    <RuleParam name="WithdrawSwitchoverDay">
        <Integer value="100" min="0" max="300">
        </Integer>
    </RuleParam>
    <RuleParam name="RefillSwitchoverDay">
        <Integer value="100" min="0" max="300">
        </Integer>
    </RuleParam>
    <RuleParam name="TurnOffProjections">
        <Boolean value="false">
        </Boolean>
    </RuleParam>
  </Policy>

</Policies>
