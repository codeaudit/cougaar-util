        <Integer value="0" min="0" max="300">
        </Integer>
    </RuleParam>
    <RuleParam name="RefillSwitchoverDay">
        <Integer value="45" min="0" max="300">
        </Integer>
    </RuleParam>
    <RuleParam name="TurnOffProjections">
